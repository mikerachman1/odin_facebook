<% if current_user == user %> 
  <% if user.profile.nil? %>
    <%= link_to 'Add Profile information', new_user_profile_path(user) %>
  <% else %>
    <%= link_to 'Edit Profile information', edit_user_profile_path(user) %>
  <% end %>
<% end %>

<% unless user.profile.blank? %>
  <h3>Profile:</h3>
  <% profile = user.profile %>
  <% if profile.avatar.attached? %>
    <%= image_tag(profile.avatar, size: "150") %>
  <% else %>
    <%= image_tag(profile.picture, size: "150") %>
  <% end %>
  <ul>
    <% unless profile.name.blank? %>
      <li>Name: <%= profile.name %></li>
    <% end %>
    <% unless profile.age.blank? %>
      <li>Age: <%= profile.age %></li>
    <% end %>
    <% unless profile.location.blank? %>
      <li>Location: <%= profile.location %></li>
    <% end %>
  </ul>
<% end %>